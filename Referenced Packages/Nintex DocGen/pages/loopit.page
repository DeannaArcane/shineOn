<apex:page standardController="Loop__Document_Request__c" extensions="Loop.DocumentRequestMergeExt" recordSetVar="docRequests">
    <apex:outputPanel rendered="{!useLightningExperience}" >
        <apex:stylesheet value="{!URLFOR($Resource.Loop__SalesforceLightning, 'assets/styles/salesforce-lightning-design-system-vf.css')}" />
        <div class="drawloop">
            <div class="slds" style="text-align: center; margin-top: 144px; font-size: 1.125rem; color: rgb(84, 105, 141);">This page isn't available in Salesforce Lightning Experience or Salesforce1.</div>
        </div>
    </apex:outputPanel>
    <apex:outputPanel rendered="{!!useLightningExperience}" >
        <style>
            span.statusContainer {
                display: block;
                text-align: center;
            }
        </style>
	<script type="text/javascript" src="{!URLFOR($Resource.Scripts, 'jQuery.js')}"></script>
        <script type="text/javascript">
            jQuery.noConflict();
            jQuery(function()
            {
                if ('{!isDeleteAction}' === 'true') {
                    if (window.confirm('Are you sure you want to delete {!documentRequestsSize} record' + (parseInt('{!documentRequestsSize}')-1 ? "s?" : "?"))) {
                        deleteDocumentRequests();
                    } else {
                        window.location = '{!JSENCODE(returnUrl)}';
                    }
                } else if ('{!isEmailAction}' === 'true') {
                    if ('{!emailLink}' === '') {
                        window.alert('Document Request status is still pending.');
                        window.location = '{!JSENCODE(returnUrl)}';
                    } else {
                        window.history.replaceState(null, null, '{!JSENCODE(returnUrl)}');
                        setEmailedStatus();
                    }
                } else {
                    if ('{!JSENCODE(returnUrl)}' !== '') {
                        jQuery('.bPageTitle:first').append(
                            '<div class="ptBreadcrumb" id="dlbc">'
                            +    '<a href="{!JSENCODE(returnUrl)}">&nbsp;Â« Back</a>'
                            +'</div>'
                        );
                    }

                    if ('{!hasValidRecords}' === 'true') {
                        updateDocumentRequestStatuses();
                        jQuery("#loopit").submit();
                    }
                }
            });
        </script>
        <apex:sectionHeader title="DocGen Queue" subtitle="Nintex DocGen"/>
        <apex:pageMessage rendered="{!NOT(hasValidRecords)}" strength="1" summary="No valid records were selected." severity="error"/>
        <apex:pageMessages id="pageMessages" />
        <apex:form >
            <apex:actionFunction name="updateDocumentRequestStatuses" action="{!updateDocumentRequestStatuses}" rerender="pageMessages" status="updateStatus"/>
            <apex:actionFunction name="deleteDocumentRequests" action="{!deleteDocumentRequests}" rerender="pageMessages" status="updateStatus"/>
            <apex:actionFunction name="setEmailedStatus" action="{!setEmailedStatus}" rerender="pageMessages"/>
            <apex:actionStatus stopText="" id="updateStatus">
                <apex:facet name="start">
                    <span class="statusContainer"><span class="status"><img src="/img/loading.gif" alt="Processing..." width="16" height="16" title="Processing..." /></span></span>
                </apex:facet>
            </apex:actionStatus>
        </apex:form>

        <form id="loopit" target="loopif" method="POST" action="{!loopUrl}/SFLogin.aspx">
            <input type="hidden" name="sessionid" value="{!$Api.Session_Id}" />
            <input type="hidden" name="location" value="{!$Api.Partner_Server_URL_300}" />
            <input type="hidden" name="next" value="{!loopitNext}" />
        </form>
        <iframe name="loopif" frameborder="0" style="height: 350px; width: 100%;" />
    </apex:outputPanel>
</apex:page>